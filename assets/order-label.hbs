<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Profile</title>
    <style>
        html {
            box-sizing: border-box;
            font-size: 24px;
        }

        *,
        *:before,
        *:after {
            box-sizing: inherit;
        }

        body,
        h1,
        h2,
        h3,
        h4,
        h5,
        h6,
        p,
        ol,
        ul {
            margin: 0;
            padding: 0;
            font-weight: normal;
        }

        ol,
        ul {
            list-style: none;
        }

        table {
            width: 100%;
        }

        .hash {
            text-align: center;
            font-weight: 700;
        }
    </style>

</head>

<body>
    {{#each orderItem}}
    <table width="100%" border="1">

        <tr>
            <td>Order No: {{orderId}}</td>
            <td>Box: {{boxName}}</td>
        </tr>
        <tr>
            <td>
                <br>
                Customer: {{customerName}}<br>
                Customer Address: {{pickUpLocation}}<br>
                Mobile No: {{phoneNumber}}<br>
                <br>
            </td>
            <td></td>
        </tr>
        <tr>
            <td>Order Date: {{orderCreatedOn}}</td>
            <td class="hash">{{hash}}</td>
        </tr>
        <tr>
            <td>Storage Area: {{storageLocation}}</td>
        </tr>
    </table>
    <br />
    {{/each}}

</body>

</html>